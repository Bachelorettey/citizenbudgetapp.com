.container
  - if @questionnaire
    - if @questionnaire.future? && @questionnaire.content_before
      :markdown
        #{@questionnaire.content_before}
    - elsif @questionnaire.past? && @questionnaire.content_after
      :markdown
        #{@questionnaire.content_after}
    - else
      = render partial: 'offline'
  - else
    = render partial: 'offline'
