.container.disabled
  %header
    - if @questionnaire.logo?
      #logo
        = link_to_unless_current image_tag(@questionnaire.logo.large.url, alt: ''), root_path
    - if @response.name?
      %h1=t '.header', name: @response.display_name
    - else
      %h1= @questionnaire.title
    #facebook
      = facebook_button
    #twitter
      = twitter_button

  - if flash[:notice]
    .alert.alert-success.fade.in
      = link_to 'Ã—', '#', 'data-dismiss' => 'alert', 'class' => 'close'
      = flash[:notice]
  - else
    .alert#invitation
      =t('.invitation', url: root_path).html_safe

  %p=t '.share'

  #share.well
    %p
      =t '.share_link'
      = text_field_tag 'url', Bitly.shorten(response_url(@response)), id: 'url-field'
      %span#clippy(rel="tooltip" title="#{t('.copy_hint')}")
        %span.clippy

  -#@todo bootstrap buttons?
  -#facebook (open graph?)
  -#twitter

  -# @todo
  =# add big yellow arrow pointing to "add a comment" button

  %nav
    %ul.nav.nav-pills
      %li.dropdown.open
        = link_to('#', {'class' => 'dropdown-toggle', 'data-toggle' => 'dropdown'}) do
          = t('.comments')
          %span.caret
        %ul.dropdown-menu
          %li
            .fb-comments(data-href="#{response_url(@response)}" data-num-posts="2" data-width="470")
      = render partial: 'nav'

  #whitespace

  = render @questionnaire

  - unless flash[:notice]
    .alert#invitation
      =t('.invitation', url: root_path).html_safe

  = render 'footer'

= render partial: 'modals'

:javascript
  var maximumDifference = #{@maximum_difference};
  var disabled = true;
